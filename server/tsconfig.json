{
    "compilerOptions": {
        "outDir": "dist",
        "mapRoot": "./dist",
        "baseUrl": "src",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "removeComments": true,
        "alwaysStrict": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ]
    }
}
